/* Настроечные файлы на основе boostrap */
@import "bootstrap";

@font-face {
  src: url('<%= asset_path 'f1.woff' %>');
  font-family: 'Welcome', 'sans-serif';
}

/* Универсальные стили */

html {
  overflow-y: scroll;
}

/* Отступ от верхнего фиксированного меню */
body {
  padding-top: 2em;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

/* Типографика */
h1, h2, h3, h4, h5, h6 {
  line-height: 1;
  text-align: center;
  margin-bottom: 30px;
  font-family: 'Welcome';
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
}

h2 {
  font-size: 2em;
  letter-spacing: -1px;
  font-weight: normal;
  color: #999;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

#logo {
  background-image: url(<%= asset_path 'logo.png' %>);
  width: 64px;
  height: 41px;
  display: block;
  margin-left: 40px;
}

.main-form {
  margin: 0 auto;
  display: block;
  max-width: 30%;
}
