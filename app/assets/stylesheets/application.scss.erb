/* Настроечные файлы на основе boostrap */
@import "bootstrap";

@font-face {
  src: url('<%= asset_path 'f1.woff' %>');
  font-family: 'Welcome', 'sans-serif';
}

/* Универсальные стили */

html {
  overflow-y: scroll;
}

/* Отступ от верхнего фиксированного меню */
body {
  padding-top: 2em;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

/* Типографика */
h1, h2, h3, h4, h5, h6 {
  line-height: 1;
  text-align: center;
  margin-bottom: 30px;
  font-family: 'Welcome';
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
}

h2 {
  font-size: 2em;
  letter-spacing: -1px;
  font-weight: normal;
  color: #999;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

#logo {
  background-image: url(<%= asset_path 'logo.png' %>);
  width: 64px;
  height: 41px;
  display: block;
  margin-left: 40px;
}

.main-form {
  margin: 0 auto;
  display: block;
  max-width: 30%;
}

/* Сообщение */
#messages, #errors {
    min-width: 150px;
    min-height: 30px;
    position: fixed;
    border-radius: 5px;
    background-color: #dbe1d5;
    opacity: .3;
    z-index: 2;
    right: 10px;
    top: 60px;
    padding: 5px;
    transition: opacity 0.5s 0.01s linear;
    -webkit-transition: opacity 0.5s 0.01s linear;
    -moz-transition: opacity 0.5s 0.01s linear;
    -o-transition: opacity 0.5s 0.01s linear;
}
#messages > div {
    position: relative;
}

#messages > div > div {
    position: absolute;
    right: 0;
    top: 0;
    cursor: pointer;
}

#messages > div > div:hover {
    color: #2E296C;
}

#messages > div > span {
    position: absolute;
    left: 0;
    top: 10px;
}

#messages:hover, #errors:hover {
    opacity: .7;
}
